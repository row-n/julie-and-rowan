body {
  background: url(../../img/linen-texture.jpg) top left cover repeat var(--body-background);
  color: var(--body-font-colour);
  font-family: var(--body-font-family);
  font-size: var(--body-font-size);
  line-height: var(--global-lineheight);
}

.main {
  position: relative;

  @media (--tablet) {
    height: 100vh;
    overflow: hidden;
  }
}

.icon-library {
  display: block;
  height: 0;
  visibility: hidden;
}
