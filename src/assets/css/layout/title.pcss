.title-wrap {
  padding: 2rem 0;

  @media (--tablet) {
    padding: 0;
    grid-area: 2/2/2/6;
  }
}

.title {
  color: var(--gold-mid);
  line-height: 75%;
  text-align: left;

  @media (--phone) {
    font-size: var(--h2-font-size);
  }

  @media (--mobile) {
    line-height: 150%;
  }

  @media (--tablet) {
    text-indent: -.1em;
  }
}

.sub-title {
  color: var(--gold-mid);
  font-family: var(--body-font-family);
}

.date {
  color: var(--gold-mid);

  &::before {
    content: 'â€•';
    margin-right: .5em;
  }

  @media (--tablet) {
    /* font-size: 2em; */
  }
}
